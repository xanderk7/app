def show_menu():
    print("\n====== TO-DO LIST APP ======")
    print("1. Show tasks")
    print("2. Add task")
    print("3. Remove task")
    print("4. Exit")

def main():
    while True:
        show_menu()
        choice = input(input("Choose an option (1-4): "))
        print(f"You chose: {choice}")
        if choice == "4":
            print("Goodbye!")
